{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true, // Enable error for unused local variables
    "noUnusedParameters": true, // Enable error for unused function parameters
    "strict": true, // Enable all strict type-checking options
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/app/*"],
      "@/styles/*": ["./src/app/styles/components/*"],
      "@/context/*": ["./src/app/context/*"],
      "@/lib/*": ["./src/app/lib/*"],
      "@/types/*": ["./src/app/types/*"],
      "@/fonts/*": ["./src/app/styles/fonts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
